<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= pageTitle %></title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
  <%- include('../header', { pageTitle: 'Create New Schedule ' }) %>

  <div class="container mt-5">
    <h1 class="text-center mb-4">Users</h1>
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>User Name</th>
          <th>User Email</th>
          <th>Status</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% user.forEach(user => { %>
          <tr>
            <td><%= user.name %></td>
            <td><%= user.email %></td>
            <td><span class="badge badge-success"><%= user.UserStatus %></span></td>
            <td>
              <% if (user.UserStatus === 'ban') { %>
                <!-- If the user is banned, show the Unban button -->
                <form action="/admin/banAndUnban" method="POST" class="d-inline">
                    <input type="hidden" name="userId" value="<%= user._id %>">
                    <input type="hidden" name="action" value="unban">
                    <button type="submit" class="btn btn-success btn-sm">Unban</button>
                </form>
              <% } else { %>
                <!-- If the user is unbanned, show the Ban button -->
                <form action="/admin/banAndUnban" method="POST" class="d-inline">
                    <input type="hidden" name="userId" value="<%= user._id %>">
                    <input type="hidden" name="action" value="ban">
                    <button type="submit" class="btn btn-danger btn-sm">Ban</button>
                </form>
              <% } %>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>

  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
