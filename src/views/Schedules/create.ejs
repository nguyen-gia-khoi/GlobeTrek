<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create New Schedule</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
</head>
<body>
    <%- include('../header', { pageTitle: 'Create New Schedule ' }) %>
    <div class="container mt-5">
        <h1 class="mb-4">Create New Schedule for Tour ID: <%= tourId %></h1>

        <form action="/schedules/tours/<%= tourId %>/schedules" method="POST">
            <div class="form-group">
                <label for="startDate">Start Date</label>
                <input type="date" class="form-control" id="startDate" name="startDate" required>
            </div>
            <div class="form-group">
                <label for="endDate">End Date</label>
                <input type="date" class="form-control" id="endDate" name="endDate" required>
            </div>
            <div class="form-group">
                <label for="isActive">Is Active</label>
                <div class="form-check form-switch">
                    <input class="form-check-input" type="checkbox" id="isActive" name="isActive" checked>
                    <label class="form-check-label" for="isActive">Toggle Active Status</label>
                </div>
            </div>
            <div class="form-group">
                <label>Itinerary Items</label>
                <div id="itinerary-items">
                    <div class="itinerary-item mb-4">
                        <h5>Itinerary Item 1</h5>
                        <div class="form-group">
                            <label for="time-0">Time</label>
                            <input type="text" class="form-control" id="time-0" name="itinerary[0][time]" placeholder="Enter time" required>
                        </div>
                        <div class="form-group">
                            <label for="activity-0">Activity</label>
                            <input type="text" class="form-control" id="activity-0" name="itinerary[0][activity]" placeholder="Enter activity" required>
                        </div>
                        <div class="form-group">
                            <label for="location-0">Location</label>
                            <input type="text" class="form-control" id="location-0" name="itinerary[0][location]" placeholder="Enter location">
                        </div>
                    </div>
                </div>
                <button type="button" class="btn btn-secondary" id="add-itinerary-item">Add Itinerary Item</button>
            </div>
            <button type="submit" class="btn btn-primary">Create Schedule</button>
        </form>
    </div>

    <script>
        let itineraryIndex = 1;

        $('#add-itinerary-item').click(function() {
            const newItem = `
                <div class="itinerary-item mb-4">
                    <h5>Itinerary Item ${itineraryIndex + 1}</h5>
                    <div class="form-group">
                        <label for="time-${itineraryIndex}">Time</label>
                        <input type="text" class="form-control" id="time-${itineraryIndex}" name="itinerary[${itineraryIndex}][time]" placeholder="Enter time" required>
                    </div>
                    <div class="form-group">
                        <label for="activity-${itineraryIndex}">Activity</label>
                        <input type="text" class="form-control" id="activity-${itineraryIndex}" name="itinerary[${itineraryIndex}][activity]" placeholder="Enter activity" required>
                    </div>
                    <div class="form-group">
                        <label for="location-${itineraryIndex}">Location</label>
                        <input type="text" class="form-control" id="location-${itineraryIndex}" name="itinerary[${itineraryIndex}][location]" placeholder="Enter location">
                    </div>
                </div>
            `;
            $('#itinerary-items').append(newItem);
            itineraryIndex++;
        });
    </script>

    <!-- Include Bootstrap JS -->
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
</body>
</html>
