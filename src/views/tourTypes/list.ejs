<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <title>Tour Types</title>
</head>
<body>
    <div class="container mt-5">
        <h1>Tour Types</h1>
        <a href="/tourtypes/create" class="btn btn-primary mb-3">Create Tour Type</a>
        <table class="table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% tourTypes.forEach(tourType => { %>
                    <tr>
                        <td><%= tourType.name %></td>
                        <td>
                            <a href="/tourtypes/edit/<%= tourType._id %>" class="btn btn-warning">Edit</a>
                            <a href="/tourtypes/delete/<%= tourType._id %>" class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
</body>
</html>
