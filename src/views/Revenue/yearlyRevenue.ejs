<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Doanh thu hàng năm</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script> <!-- Thêm Chart.js -->
</head>
<body>
    <div class="container mt-5">
        <h2>Doanh thu hàng năm cho 2 năm gần nhất</h2>

        <canvas id="yearlyRevenueChart" width="400" height="200"></canvas> <!-- Khung vẽ biểu đồ -->

        <script>
            const labels = <%- JSON.stringify(labels) %>; // Nhãn cho trục x
            const revenues = <%- JSON.stringify(revenues) %>; // Dữ liệu cho biểu đồ

            // Biểu đồ doanh thu
            const ctx = document.getElementById('yearlyRevenueChart').getContext('2d');
            const yearlyRevenueChart = new Chart(ctx, {
                type: 'bar', // Kiểu biểu đồ
                data: {
                    labels: labels, // Nhãn năm
                    datasets: [{
                        label: 'Doanh thu hàng năm (VNĐ)', // Nhãn cho bộ dữ liệu
                        data: revenues, // Dữ liệu để hiển thị
                        backgroundColor: 'rgba(75, 192, 192, 0.2)', // Màu nền của cột
                        borderColor: 'rgba(75, 192, 192, 1)', // Màu viền của cột
                        borderWidth: 1 // Độ dày viền
                    }]
                },
                options: {
                    scales: {
                        y: {
                            beginAtZero: true // Bắt đầu từ 0 trên trục y
                        }
                    }
                }
            });
        </script>
    </div>
</body>
</html>
