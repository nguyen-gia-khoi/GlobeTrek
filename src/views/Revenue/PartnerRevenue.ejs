<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Doanh thu hàng năm</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <style>
        .card {
            border-radius: 15px;
            margin-bottom: 30px;
        }

        .table th,
        .table td {
            text-align: center;
            vertical-align: middle;
        }

        .chart-container {
            width: 100%;
            height: 400px;
        }

        .total-revenue {
            font-size: 1.5rem;
            font-weight: bold;
            color: #17a2b8;
        }

        .btn-refresh {
            background-color: #007bff;
            color: #fff;
            border: none;
            padding: 5px 10px;
            border-radius: 5px;
            cursor: pointer;
        }

        .btn-refresh:hover {
            background-color: #0056b3;
        }

        /* Tạo không gian cho biểu đồ và bảng trong cùng một hàng */
        .chart-and-table {
            display: flex;
            justify-content: space-between;
            gap: 30px;
        }

        .chart-container {
            width: 48%; /* Cho biểu đồ chiếm 50% chiều rộng */
            height: 300px;
        }

        .table-container {
            width: 48%; /* Cho bảng chiếm 50% chiều rộng */
        }
    </style>
</head>

<body>
    <%- include('../DashboardPN', { pageTitle: 'Doanh Thu Hàng Năm' }) %>

    <div class="container mt-5">
        <h1 class="text-center text-primary">Doanh Thu của Các Tour</h1>
        <p class="text-center">Xem doanh thu hàng năm của các tour mà bạn đã tạo</p>

        <!-- Hàng chứa biểu đồ và bảng -->
        <div class="chart-and-table">
            <!-- Bảng Doanh Thu -->
            <div class="table-container">
                <div class="card shadow-sm">
                    <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">Danh sách Tour và Doanh Thu</h5>
                        <button class="btn-refresh" onclick="location.reload()">Làm mới</button>
                    </div>
                    <div class="card-body">
                        <h1>Welcome, <%= partnerName || 'Partner' %></h1>
                        <p class="total-revenue"><strong>Tổng Doanh Thu:</strong> <%= totalRevenue.toLocaleString() %> VND</p>

                        <table class="table table-bordered table-striped table-hover">
                            <thead class="thead-dark">
                                <tr>
                                    <th>Tên Tour</th>
                                    <th>Số Đơn Hàng</th>
                                    <th>Doanh Thu</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if (revenueData && revenueData.length > 0) { %>
                                    <% revenueData.forEach(data => { %>
                                        <tr>
                                            <td><%= data.tourName %></td>
                                            <td><%= data.ordersCount %></td>
                                            <td><%= data.revenue.toLocaleString() %> VND</td>
                                        </tr>
                                    <% }) %>
                                <% } else { %>
                                    <tr>
                                        <td colspan="3">Không có dữ liệu doanh thu</td>
                                    </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <!-- Biểu đồ Doanh Thu -->
            <div class="chart-container">
                <div class="card shadow-sm">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">Biểu đồ Doanh Thu của Các Tour</h5>
                    </div>
                    <div class="card-body">
                        <div class="chart-container">
                            <canvas id="revenueChart"></canvas>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <script>
        // Dữ liệu cho biểu đồ
        const revenueData = <%- JSON.stringify(revenueData) %>;

        // Lấy tên tour và doanh thu từ revenueData
        const tourNames = revenueData.map(data => data.tourName);
        const revenues = revenueData.map(data => data.revenue);

        // Tạo màu sắc ngẫu nhiên
        const getRandomColor = () => {
            const letters = '0123456789ABCDEF';
            let color = '#';
            for (let i = 0; i < 6; i++) {
                color += letters[Math.floor(Math.random() * 16)];
            }
            return color;
        };

        const colors = revenueData.map(() => getRandomColor());

        // Vẽ biểu đồ tròn
        const ctx = document.getElementById('revenueChart').getContext('2d');
        new Chart(ctx, {
            type: 'pie',  // Chuyển thành biểu đồ tròn (pie chart)
            data: {
                labels: tourNames,
                datasets: [{
                    label: 'Doanh Thu (VND)',
                    data: revenues,
                    backgroundColor: colors,
                    borderColor: colors,
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: {
                        position: 'top'
                    },
                    tooltip: {
                        callbacks: {
                            label: tooltipItem => tooltipItem.raw.toLocaleString() + ' VND'
                        }
                    }
                }
            }
        });
    </script>
</body>

</html>
