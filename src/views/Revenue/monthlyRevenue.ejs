<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Doanh thu hàng tháng</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script> <!-- Thêm Chart.js -->
</head>
<body>
    <div class="container mt-5">
        <h2>Doanh thu hàng tháng 6 tháng gần nhất</h2>

        <canvas id="monthlyRevenueChart" width="400" height="200"></canvas> <!-- Khung vẽ biểu đồ -->

        <script>
            const labels = <%- JSON.stringify(labels) %>; // Nhãn cho trục x
            const monthlyRevenues = <%- JSON.stringify(monthlyRevenues) %>; // Dữ liệu cho biểu đồ

            // Biểu đồ doanh thu
            const ctx = document.getElementById('monthlyRevenueChart').getContext('2d');
            const monthlyRevenueChart = new Chart(ctx, {
                type: 'bar', // Kiểu biểu đồ
                data: {
                    labels: labels.reverse(), // Nhãn tháng
                    datasets: [{
                        label: 'Doanh thu hàng tháng (VNĐ)', // Nhãn cho bộ dữ liệu
                        data: monthlyRevenues.reverse(), // Dữ liệu để hiển thị
                        backgroundColor: 'rgba(75, 192, 192, 0.2)', // Màu nền của cột
                        borderColor: 'rgba(75, 192, 192, 1)', // Màu viền của cột
                        borderWidth: 1 // Độ dày viền
                    }]
                },
                options: {
                    scales: {
                        y: {
                            beginAtZero: true // Bắt đầu từ 0 trên trục y
                        }
                    }
                }
            });
        </script>
    </div>
</body>
</html>
