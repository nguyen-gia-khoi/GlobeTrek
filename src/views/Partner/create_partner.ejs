<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Create admin</title>
  <link rel="stylesheet" href="/css/style.css">
</head>

<body>
  <div class="topnav">
    <a class="active" href="/">Home</a>
    <a href="/create_admin">Admin account</a>
    <a href="/create_tour">Tour</a>
    <a href="/create_tourtype">Tour Type</a>
    <a href="/create_detail">Tour Detail</a>
    <a href="/create_destination">Destination</a>
    <a href="/create_partner">Partner</a>
  </div>
  <div class="form-add-new">
    <form action="/create_partner" method="post">
      <fieldset>
        <legend>Form add new Partner</legend>
        
        <div class="input-group">
          <label>PartnetName: </label>
          <input type="text" name="Partnername"/>
        </div>

        <div class="input-group">
          <label>PartnerNumber: </label>
          <input type="text" name="Partnernumber"/>
        </div>

        <div>
          <button type="submit">Save</button>
        </div>
      </fieldset>
    </form>
  </div>
  <div class="table_container">
    <div class="title">List Partner</div>
    <table>
      <tr>
        <th>ID</th>
        <th>Partnername</th>
        <th>Partnernumber</th>
        <th>Action</th>
      </tr>
      <% listPartner.forEach(function(partner) { %> 
        <tr>
          <td><%= partner.id %></td>
          <td><%= partner.partnername %></td>
          <td><%= partner.partnernumber %></td>
          <td>
            <a href="/update_partner/<%= partner.id %>" class="EditBtn">Edit</a>
            
            <form action="/delete_partner/<%= partner.id %>" method="post">
              <button class="DeleteBtn">Delete</button>
            </form>
            
          </td>
        </tr>
      <% }); %>
      
    </table>
  </div>
</body>
</html>
