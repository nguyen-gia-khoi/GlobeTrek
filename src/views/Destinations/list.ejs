<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <title>Destination List</title>
</head>
<body>
    
    <%- include('../header', { pageTitle: 'Destination List' }) %>
    <div class="container mt-5">
        <h1>Destination List</h1>
        <a href="/destinations/create" class="btn btn-primary mb-3">Add New Destination</a>
        <table class="table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% destinations.forEach(destination => { %>
                    <tr>
                        <td><%= destination.name %></td>
                        <td>
                            <a href="/destinations/edit/<%= destination._id %>" class="btn btn-warning btn-sm">Edit</a>
                            <a href="/destinations/delete/<%= destination._id %>" class="btn btn-danger btn-sm">Delete</a>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</body>
</html>
