<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <title>Destination List</title>
</head>
<body>
    <%- include('../header', { pageTitle: '' }) %>
    
    <div class="page-header">
        <div class="container">
            <h1 class="display-4">Destination List</h1>
        </div>
    </div>

    <div class="container mt-4">
        <div class="card">
            <div class="table-responsive">
                <table class="table mb-0">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% destinations.forEach(destination => { %>
                            <tr>
                                <td><%= destination.name %></td>
                                <td>
                                    <a href="/admin/destinations/edit/<%= destination._id %>" class="btn btn-primary btn-sm me-2">Edit</a>
                                    <a href="/admin/destinations/delete/<%= destination._id %>" class="btn btn-danger btn-sm">Delete</a>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>
</html>
